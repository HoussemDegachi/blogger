<%- layout("./layouts/boilerplate") %>

    <div class="container">
        <div class="card content-container">
            <h1 class="font-bold text-2xl">Hey there!</h1>
            <div class="flex md:flex-col">
                <figure class="w-1/2 md:w-full md:flex md:justify-center">
                    <img src="/assets/auth.svg" class="md:max-h-[350px]" alt="login">
                </figure>
                <form class="mt-9 w-1/2 ml-2 md:w-full form-validate" action="/register" method="POST" novalidate>
                    <div class="mb-6 w-full">
                        <label for="name">Name:</label>
                        <input required
                            class="block outline-none border-b-2 border-cyan-400 focus:border-cyan-600 duration-300 w-full"
                            type="text" name="name" id="name" minLength="2">
                        <span class="error-message w-full bg-red-500 bg-opacity-60 rounded-b px-3 py-1 hidden"
                            aria-live="polite"></span>
                    </div>
                    <div class="mb-6 w-full">
                        <label for="email">Email:</label>
                        <input required
                            class="block outline-none border-b-2 border-cyan-400 focus:border-cyan-600 duration-300 w-full"
                            type="email" name="email" id="email">
                        <span class="error-message w-full bg-red-500 bg-opacity-60 rounded-b px-3 py-1 hidden"
                            aria-live="polite"></span>
                    </div>
                    <div class="mb-6 w-full">
                        <label for="job">Job:</label>
                        <input required
                            class="block outline-none border-b-2 border-cyan-400 focus:border-cyan-600 duration-300 w-full"
                            type="text" name="job" id="job" minLength="3">
                        <span class="error-message w-full bg-red-500 bg-opacity-60 rounded-b px-3 py-1 hidden"
                            aria-live="polite"></span>
                    </div>
                    <div class="mb-6 w-full">
                        <label for="description">Description:</label>
                        <textarea
                            class="block outline-none border-b-2 border-cyan-400 focus:border-cyan-600 duration-300 w-full"
                            type="text" name="description" id="description"></textarea>
                    </div>
                    <div class="mb-6 w-full">
                        <label for="password">Password:</label>
                        <input required
                            class="block outline-none border-b-2 border-cyan-400 focus:border-cyan-600 duration-300 w-full"
                            type="password" name="password" id="password" minLength="8">
                        <span class="error-message w-full bg-red-500 bg-opacity-60 rounded-b px-3 py-1 hidden"
                            aria-live="polite"></span>
                    </div>
                    <button class="btn w-full">Register</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/formValidate.js"></script>