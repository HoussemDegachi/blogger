<% layout("./layouts/boilerplate") %>
    <div class="container">
        <h1 class="section-title">Featured:</h1>
        <ul class="w-full">
            <% for (let blog of blogs) { %>
                <li class="card">
                    <%- include("./partials/imageComp", {url: blog.image.url, id: blog._id, likes: blog.likes , linkImage: true}) %>
                        <div class="py-3 px-6">
                            <%- include("./partials/blogDescription", {blog}) %>
                                <a href="/<%= blog._id %>" class="text-3xl text-bold w-max hover:border-b-2 hover:border-cyan-500 hover:text-cyan-500 
                                duration-300">
                                    <%= blog.title %>
                                </a>
                        </div>
                </li>
                <% } %>
        </ul>
    </div>
    <script src="/js/collectionOpenModal.js"></script>
