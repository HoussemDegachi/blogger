<% layout("./layouts/boilerplate") %>
    <div class="container">
        <h1 class="section-title">Featured:</h1>
        <ul class="w-full">
            <% for (let blog of blogs) { %>
                <li class="card">
                    <a href="/<%= blog._id %>">
                        <figure>
                            <img src="<%= blog.image %>" loading="lazy" alt="">
                        </figure>
                    </a>
                    <div class="py-3 px-6">
                        <%- include("./partials/blogDescription", {blog}) %>
                            <a href="/<%= blog._id %>">
                                <h2 class=" text-3xl text-bold hover:border-b-2 hover:border-cyan-500 hover:text-cyan-500 
                                    duration-300 w-max">
                                    <%= blog.title %>
                                </h2>
                            </a>
                    </div>
                </li>
                <% } %>
        </ul>
    </div>