<% layout("./layouts/boilerplate") %>
    <div class="w-full max-w-[850px]">
        <h2 class="page-title">Featured:</h2>
        <ul class="w-full">
            <% for (let blog of blogs) { %>
                <li class="card">
                    <a href="/<%= blog._id %>">
                        <figure>
                            <img src="https://blogs.microsoft.com/wp-content/uploads/prod/2024/02/MC4S_1-960x540.jpg"
                                loading="lazy" alt="">
                        </figure>
                    </a>
                    <div class="py-3 px-6">
                        <div class="flex text-[14px] mb-5 items-center">
                            <p>
                                <%= blog.fmCreationDate %>
                            </p>
                            <span class="mx-4 w-[2px] h-6 bg-gray-500"></span>
                            <a class="text-cyan-600 border-b-2 border-cyan-600 pb-0" href="">
                                <%= blog.author %>
                            </a>
                        </div>
                        <a href="/<%= blog._id %>">
                            <h3 class=" text-3xl text-bold hover:border-b-2 hover:border-cyan-500 hover:text-cyan-500
                            duration-300 w-max">
                                <%= blog.title %>
                            </h3>
                        </a>
                    </div>
                </li>
                <% } %>
        </ul>
    </div>